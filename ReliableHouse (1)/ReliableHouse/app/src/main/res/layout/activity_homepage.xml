<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Dashboard Header -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="207dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Welcome to Your Dashboard!"
        android:textColor="#333"
        android:textSize="22sp" />

    <!-- Main Content -->

    <Button
        android:id="@+id/buttonDonor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want to donate"
        android:backgroundTint="#2980b9"
        android:textColor="#fff"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/buttonViewDonations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donation History"
        android:backgroundTint="#2980b9"
        android:textColor="#fff"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/buttonVolunteer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want to volunteer"
        android:backgroundTint="#2980b9"
        android:textColor="#fff"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
