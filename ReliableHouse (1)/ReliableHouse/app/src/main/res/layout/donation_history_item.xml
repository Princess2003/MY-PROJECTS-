<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/donationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donation Date"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="8dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/donationAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount: R200"
        android:textSize="14sp"
        android:textColor="#666666"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/donatedItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items: Clothes, Food"
        android:textSize="14sp"
        android:textColor="#666666"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/pickupPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup Point: 123 Donation Street"
        android:textSize="14sp"
        android:textColor="#666666"
        android:paddingBottom="8dp"/>

</LinearLayout>
