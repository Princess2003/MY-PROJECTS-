<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volunteer Opportunities"
        android:textSize="24sp"
        android:textColor="#333"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Available Tasks Section -->
    <TextView
        android:id="@+id/availableTasksTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Tasks"
        android:textSize="18sp"
        android:textColor="#007bff"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/availableTasksSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/availableTasksTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"/>

    <!-- Assigned Tasks Section -->
    <TextView
        android:id="@+id/assignedTasksTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Tasks"
        android:textSize="18sp"
        android:textColor="#007bff"
        app:layout_constraintTop_toBottomOf="@id/availableTasksSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/assignedTasksSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/assignedTasksTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"/>

    <!-- Back to Dashboard Button -->
    <Button
        android:id="@+id/backToDashboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Dashboard"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/assignedTasksSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#2980b9"
        android:textColor="#fff"
        android:padding="10dp"
        android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
